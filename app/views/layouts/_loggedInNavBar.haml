.header__container
  .header__space
    %ul.header
      %li.header__list
        = link_to root_path, class:"header__list__text" do
          %i.fa.fa-home{"aria-hidden" => "true"} ホーム
      %li.header__list
        = link_to  moment_tweets_path, class:"header__list__text" do
          %i.fa.fa-bolt{"aria-hidden" => "true"} モメント
    .navBar__rightArea
      .search
        .navBar__search__area
          = form_tag('/tweets/search', method: :get) do
            %input.searchBar{:name => "keyword", :placeholder => "キーワード検索", :type => "text", :value => ""}/
      %ul.navBar__actionBTN__area
        = link_to image_tag(current_user.avatar, {:class=>"navBar__iconBTN"}),user_path(current_user.id)
        .navBar__tweetBTN
          = link_to "ツイート", new_tweet_path, class: "navBar__tweetBTN--text tweetFlash"

