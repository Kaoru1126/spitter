- @tweets.each do |tweet|
  .moment__main--stream__tweets
    .main__top
      .main__top--icon
        = link_to image_tag(tweet.user.avatar, {:class=>"main__top--icon"}),user_path(tweet.user)
      .main__top--right
        .main__top--name
          = link_to tweet.user.name, user_path(tweet.user)
        .main__top--date
          = tweet.created_at.strftime("%Y/%m/%d %H:%M:%S")
    .main__bottom
      = simple_format(tweet.content)
      = image_tag tweet.image.thumb
    .main__stats
= paginate(@tweets)
.page-load-status
  .infinite-scroll-request
    .loader-wheel
      %i
        %i
          %i
            %i
              %i
                %i
                  %i
                    %i
                      %i
                        %i
                          %i
                            %i
    .infinite-scroll-last End of content
    .infinite-scroll-error No more pages to load


