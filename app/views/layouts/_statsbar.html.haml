.statsbar__area__block
  .editBtn__area
    .editBtn
      %p.editBtn--text
        - if current_user = @user.id
          = link_to "プロフィールを編集", edit_user_registration_path
  .logoutBtn__area
    .logoutBtn
      %p.logoutBtn--text
        = link_to "ログアウト", destroy_user_session_path, method: :delete
  .numOfTweet--area
    .numOfTweet__text--area
      %p.numOfTweet--text
        = link_to "ツイート", user_path(@user.id)
    .itsNumber
      = @myTweetCount
  .numOfTweet--area
    .numOfTweet__text--area
      %p.numOfTweet--text
        = link_to "フォロー", following_user_path
    .itsNumber
      = @myFollowingsCount
  .numOfTweet--area
    .numOfTweet__text--area
      %p.numOfTweet--text
        = link_to "フォロワ", follower_user_path
    .itsNumber
      = @myFollowersCount