.header__container
  = render 'layouts/loggedInNavBar'
.largepic-container
  .largepic-area
  .statsbar-area
    .statsbar-area__container
      .statsbar__area__block
        .editBtn__area
          .editBtn
            %p.editBtn--text プロフィールを編集
        .logoutBtn__area
          .logoutBtn
            %p.logoutBtn--text
              = link_to "ログアウト", destroy_user_session_path, method: :delete
        .numOfTweet--area
          .numOfTweet__text--area
            %p.numOfTweet--text
              = link_to "ツイート", user_path(current_user.id)
          .itsNumber
            = @myTweetCount
        .numOfTweet--area
          .numOfTweet__text--area
            %p.numOfTweet--text
              = link_to "フォロー", following_users_path
          .itsNumber
            = @myFollowingsCount
        .numOfTweet--area
          .numOfTweet__text--area
            %p.numOfTweet--text フォロワ
          .itsNumber
            = @myFollowersCount
.following
  .index-container
    = render 'layouts/indexLeft'
    .user__main
      .user__main--timeline__tweetbox
        .tweetBox
          .tweetBtn
            = link_to "ツイート", user_path(current_user.id)
        .followingBox
          .followingBtn
            = link_to "フォロー", following_users_path
      .user__main--stream__box
        = render 'layouts/mainTweet'
    .index__right
      = render 'layouts/indexRight'