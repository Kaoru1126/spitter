.header__container
  = render 'layouts/loggedInNavBar'
.largepic-container
  .largepic-area
  .statsbar-area
    .statsbar-area__container
      .statsbar__area__block
        .editBtn__area
          .editBtn
            %p.editBtn--text プロフィールを編集
        .logoutBtn__area
          .logoutBtn
            %p.logoutBtn--text
              = link_to "ログアウト", destroy_user_session_path, method: :delete
        .numOfTweet--area
          .numOfTweet__text--area
            %p.numOfTweet--text
              = link_to "ツイート", user_path(current_user.id)
          .itsNumber
            = @myTweetCount
        .numOfTweet--area
          .numOfTweet__text--area
            = link_to "フォロー", following_users_path
          .itsNumber
            = @myFollowingsCount
        .numOfTweet--area
          .numOfTweet__text--area
            %p.numOfTweet--text フォロワ
          .itsNumber
            = @myFollowersCount
.following
  .index-container
    .index__left
      .index__bio
        .index__bio__box--top
        .index__bio__box--bottom
          .index__bio__box--icon
          .index__bio__box--name
          .index__bio__box--stats
      .index__trends-box
        %h3 プロフィール
    .following__container
      - @nameBox.each do |following|
        .following__area
          .following__cells
            .following__cells__top
            .following__cells__bottom
              .following__cells__bottom--icon
              .following__cells__bottom--btn フォロー中
              .following__cells__bottom--name
                = following.name
              .following__cells__bottom--intro